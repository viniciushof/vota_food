<%= form_for @qualificacao, :html => { :class => "form-horizontal qualificacao" } do |f| %>

  <% if @qualificacao.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@qualificacao.errors.count, "error") %> prohibited this qualificacao from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @qualificacao.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nota, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nota, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nota) %>
  </div>
  <div class="form-group">
    <%= f.label :valor_gasto, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :valor_gasto, :class => 'form-control' %>
    </div>
    <%=f.error_span(:valor_gasto) %>
  </div>
  <div class="form-group">
    <%= f.label :restaurante_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <!-- <%= f.text_field :restaurante_id, :class => 'form-control' %> -->
      <%= f.collection_select(:restaurante_id,Restaurante.order(:nome), :id, :nome, {prompt: "Selecione um restaurante"}, {class: "form-control"}) %>
    </div>
    <%=f.error_span(:restaurante_id) %>
  </div>
  <div class="form-group">
    <%= f.label :cliente_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <!-- <%= f.text_field :cliente_id, :class => 'form-control' %> -->
      <%= f.collection_select(:cliente_id, Cliente.order(:nome),:id, :nome, {prompt: "Selecione o campo"}, {class: "form-control"}) %>
    </div>
    <%=f.error_span(:cliente_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                qualificacoes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
