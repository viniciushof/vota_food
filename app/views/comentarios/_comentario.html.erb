<p id='<%= "comentario_#{comentario.id}" %>'>
	<%= comentario.conteudo %> - 
	<%= comentario.usuario.email if comentario.usuario != nil %> -
	<% if comentario.usuario and comentario.usuario.id == current_usuario.id %>
	<%= link_to 'remover', comentario, method: :delete, remote: true, id: "remove_comentario_#{comentario.id}" %>
	<% end %>
	<% content_for :js do %>
		$('#remove_comentario_<%= comentario.id %>').bind('ajax:success', function(){$('#comentario_<%= comentario.id %> ').fadeOut();});
	<%end%>
</p>